{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "codeflow-commander---nexus-gateway",
  "private": true,
  "version": "1.0.0",
  "description": "AI-powered development tool with CI/CD simulator and intelligent git workflow enhancement",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/simulator-ui",
    "build": "npm run build --workspace=packages/simulator-ui",
    "test": "npm run test --workspace=packages/simulator-ui",
    "start": "npm run start --workspace=packages/simulator-ui",
    "server": "node server/server.js",
    "build:all": "npm run build --workspaces",
    "test:all": "npm run test --workspaces",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit -p packages/codeflow-cli/tsconfig.json",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "setup": "npm install && npm run build:all",
    "security-check": "node scripts/security-check.js"
  },
  "dependencies": {
    "@types/express": "^5.0.5",
    "better-sqlite3": "^12.6.2",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/graphql": "^14.2.3",
    "@types/graphql-depth-limit": "^1.1.6",
    "@types/graphql-validation-complexity": "^0.4.4",
    "@types/gremlin": "^3.6.7",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "ai",
    "development",
    "git",
    "ci-cd",
    "simulator",
    "typescript",
    "docker"
  ],
  "author": "Sharv619",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sharv619/codeflow-commander---nexus-gateway.git"
  }
}
