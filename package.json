{
  "name": "codeflow-commander-nexus-gateway",
  "version": "1.0.0",
  "description": "The Autonomous Engineering Platform - Complete ecosystem for AI-powered development workflows",
  "main": "index.js",
  "workspaces": [
    "cli-tool",
    "codeflow-sentinel",
    "backend",
    "codeflow-cli"
  ],
  "scripts": {
    "test": "npm run test --workspaces",
    "test:unit": "npm run test:unit --workspaces",
    "test:e2e": "npm run test:e2e --workspaces",
    "test:integration": "npm run test --workspace=cli-tool -- --testPathPattern='tests/integration'",
    "test:security": "npm run test:security --workspace=cli-tool",
    "lint": "npm run lint --workspaces",
    "build": "npm run build --workspaces",
    "ci": "npm run ci --workspace=cli-tool",
    "verify": "./verify_ecosystem.sh",
    "audit": "./tests/verification/deep_audit.sh",
    "rc": "./rc_verify.sh",
    "install:all": "npm install",
    "setup": "node setup.js",
    "docs": "npm run docs --workspace=cli-tool",
    "health-check": "npm run health-check --workspace=cli-tool",
    "benchmark": "npm run benchmark --workspace=cli-tool"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Sharv619/codeflow-commander---nexus-gateway.git"
  },
  "keywords": [
    "ai",
    "ml",
    "devops",
    "automation",
    "code-review",
    "compliance",
    "security",
    "enterprise",
    "developer-tools",
    "autonomous-engineering"
  ],
  "author": "CodeFlow Commander Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "private": true
}
