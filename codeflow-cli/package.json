{
  "name": "codeflow-cli",
  "version": "3.0.0",
  "description": "Generative Engineering Co-Pilot for Code Review and Improvement",
  "main": "bin/codeflow.js",
  "bin": {
    "codeflow": "bin/codeflow.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/cli/index.ts",
    "dev": "nodemon --exec ts-node src/cli/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test",
    "prepare": "husky install"
  },
  "keywords": [
    "ai",
    "code-review",
    "code-generation",
    "developer-tools",
    "typescript",
    "cli",
    "generative-ai"
  ],
  "author": "Codeflow Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/crypto-js": "^4.2.1",
    "@types/diff": "^5.0.8",
    "@types/node-cron": "^3.0.11",
    "@types/semver": "^7.5.6",
    "axios": "^1.6.2",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "crypto-js": "^4.2.0",
    "diff": "^5.1.0",
    "escape-string-regexp": "^5.0.0",
    "fs-extra": "^11.2.0",
    "lru-cache": "^10.1.0",
    "node-cron": "^3.0.3",
    "ora": "^7.0.1",
    "semver": "^7.5.4",
    "sqlite3": "^5.1.6",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.19.24",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "tests/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/cli/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-repo/codeflow-cli.git"
  },
  "bugs": {
    "url": "https://github.com/your-repo/codeflow-cli/issues"
  },
  "homepage": "https://github.com/your-repo/codeflow-cli#readme"
}
