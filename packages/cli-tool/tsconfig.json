{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./lib/cli-integration/dist",
    "rootDir": "./lib/cli-integration/src",
    "resolveJsonModule": true
  },
  "include": [
    "lib/cli-integration/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib/cli-integration/dist"
  ]
}
