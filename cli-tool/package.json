{
  "name": "codeflow-cli-tool",
  "version": "6.0.0",
  "description": "Enterprise-grade AI-powered code review and knowledge management system (Phases 3-4-5)",
  "main": "bin/codeflow-hook.js",
  "bin": {
    "codeflow-hook": "bin/codeflow-hook.js"
  },
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules --experimental-loader ./tests/jest-esm.loader.mjs' jest --coverage --verbose",
    "test:unit": "npm run test -- --testPathPattern='tests/unit'",
    "test:integration": "npm run test -- --testPathPattern='tests/integration'",
    "test:e2e": "npm run test -- --testPathPattern='tests/e2e'",
    "test:performance": "node tests/performance/benchmark.js",
    "test:security": "NODE_OPTIONS='--experimental-vm-modules' jest tests/security/ --verbose",
    "test:dependencies": "npm audit --audit-level=moderate",
    "test:lint": "eslint src/ bin/ tests/ --ext .js,.mjs",
    "test:validation": "node test-validation.sh",
    "build": "echo 'Build skipped - using source files directly'",
    "prepare": "echo 'Prepare skipped - using source files directly'",
    "install-hooks": "node bin/codeflow-hook.js install",
    "docs": "node scripts/generate-docs.mjs",
    "docker:test": "docker-compose -f compose.debug.yaml up --build --abort-on-container-exit",
    "ci": "npm run test:lint && npm run test:unit && npm run test:integration && npm run test:security",
    "benchmark": "npm run test:performance && npm run security:audit",
    "health-check": "node scripts/health-check.mjs"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "axios": "^1.13.2",
    "chalk": "^5.3.0",
    "ora": "^9.0.0",
    "glob": "^10.0.0"
  },
  "optionalDependencies": {
    "sqlite3": "^5.1.0",
    "@tensorflow/tfjs-node": "^4.12.0",
    "@tensorflow-models/universal-sentence-encoder": "^1.3.3",
    "@xenova/transformers": "^2.17.1",
    "faiss-node": "^0.5.1",
    "neo4j-driver": "^5.12.0",
    "lru-cache": "^10.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0",
    "@jest/environment": "^29.7.0",
    "supertest": "^6.3.3",
    "testcontainers": "^10.7.2",
    "nyc": "^15.1.0",
    "eslint": "^9.9.0",
    "prettier": "^3.3.0",
    "@eslint/js": "^9.9.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.7",
    "mocha": "^10.6.0",
    "chai": "^5.1.0",
    "chai-as-promised": "^8.0.0",
    "sinon": "^18.0.0",
    "proxyquire": "^2.1.3",
    "rewire": "^7.0.0",
    "benchmark": "^2.1.4",
    "autocannon": "^7.15.0",
    "clinic": "^13.0.0",
    "0x": "^5.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{js,mjs}",
      "bin/**/*.{js,mjs}",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "**/tests/**/*.test.{js,mjs}",
      "**/__tests__/**/*.test.{js,mjs}"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@tensorflow|faiss-node|@xenova)/)"
    ]
  },
  "lint-staged": {
    "*.{js,mjs,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run ci"
    }
  }
}
